            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/iv_num6"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/iv_num7"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>
</HorizontalScrollView>
</RelativeLayout>